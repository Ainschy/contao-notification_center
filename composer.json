{
    "name":"terminal42/notification_center",
    "description":"Notification Center extension for Contao Open Source CMS",
    "keywords":["contao", "notification", "center"],
    "type":"contao-module",
    "license":"LGPL-3.0+",
    "authors":[
        {
            "name":"terminal42 gmbh",
            "homepage":"http://terminal42.ch"
        }
    ],
    "require":{
        "php":">=5.3.2",
        "contao":">=2.3",
        "contao-community-alliance/composer-installer":"*",
        "contao-legacy/dcawizard":"2.0.*"
    },
    "autoload":{
        "classmap":["system/modules/notification_center/library"]
    },
    "replace": {
        "contao-legacy/notification_center": "self.version"
    },
    "extra":{
        "contao": {
            "sources":{
                "system/modules/notification_center": "system/modules/notification_center"
            },
            "transifex": {
                "project": "notification_center",
                "prefix": "develop-notification_center-",
                "languages_cto": "languages",
                "languages_tx": ".tx"
            }
        }
    }
}